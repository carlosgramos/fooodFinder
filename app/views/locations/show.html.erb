<h1>Restaurants Near You:</h1>

<% loc = @locations.sample %>
<div class="restaurant">
  <h4>
      <strong>Name:</strong>
      <%= loc.name %>
  </h4>

  <p>
      <% if !loc.image.include?(".png") %>
        <%= image_tag "https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference=#{loc.image}&key=#{ENV['GOOGLE_PLACES_API']}" %>
      <% else %>
        <%= image_tag loc.image %>
      <% end %>
  </p>

  <strong>Address:</strong>
  <p id="directions-btn">
    <%= loc.address %>
  </p>

  <p>
      <strong>Price Range:</strong>
      <%= loc.price_range %>
  </p>

  <p>
      <strong>Rating:</strong>
        <%= loc.rating%><span> / 5</span>
  </p>

  <div class="search_location">
      <%= submit_tag 'Next' %>
  </div>


  <button>
    <%= link_to "Home", root_path %>
  </button>

  <button id="directions">
    Directions
  </button>

</div>
